<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Exemplos de listas"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnExemplo11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Exemplo 1.1"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btnExemplo12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Exemplo 1.2"
        app:layout_constraintEnd_toEndOf="@+id/btnExemplo11"
        app:layout_constraintStart_toStartOf="@+id/btnExemplo11"
        app:layout_constraintTop_toBottomOf="@+id/btnExemplo11" />

    <Button
        android:id="@+id/btnExemplo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Exemplo 2"
        app:layout_constraintEnd_toEndOf="@+id/btnExemplo12"
        app:layout_constraintStart_toStartOf="@+id/btnExemplo12"
        app:layout_constraintTop_toBottomOf="@+id/btnExemplo12" />

    <Button
        android:id="@+id/btnExemplo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Exemplo 3"
        app:layout_constraintEnd_toEndOf="@+id/btnExemplo2"
        app:layout_constraintStart_toStartOf="@+id/btnExemplo2"
        app:layout_constraintTop_toBottomOf="@+id/btnExemplo2" />

    <Button
        android:id="@+id/btnSair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Sair"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>